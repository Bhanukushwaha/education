<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.description %></td>
        <td><%= image_tag blog.image, height: "100", width: "100" %></td>
        <td><%= link_to 'Show', polymorphic_path([:admin,  blog]) %></td>
        <td><%= link_to 'Edit', edit_admin_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', polymorphic_path([:admin,  blog]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="pull-right">
  <%= will_paginate @blogs, renderer: BootstrapPagination::Rails %>
</div>
<%= link_to 'New Blog', new_admin_blog_path %>
